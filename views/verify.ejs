<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title>Xác thực</title>
</head>

<body>
    <div class="contanier">
        <h1 style="text-align: center; margin-top: 100px;">Xác thực OTP</h1>
        <form style="margin-left: 560px; margin-top: 50px;">
            <div class="form-group">
                <label for="exampleInputOTP">Mã số OTP</label>
                <input style="width: 400px;" type="number" class="form-control" id="txtOTP"
                    placeholder="Nhập vào mã số OTP">
            </div>
            <!-- <div class="form-group">
                <a href="#">
                    <button style="margin-left: 270px;" class="btn btn-warning">Gửi lại mã OTP</button>
                </a>
            </div> -->
            <button style="width: 400px;" type="submit" class="btn btn-primary" id="btnVerify">GIAO DỊCH </button>
        </form>

    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>

    <script>
        $(document).ready(function () {
            const getData = () => {
                let otpNumber = $('#txtOTP').val();
                return { otpNumber };
            }

            const checkData = ({ otpNumber }) => {
                return (otpNumber == '') ? false : true;
            }

            $('#btnVerify').click(function (e) {
                e.preventDefault();
                let data = getData();
                let isData = checkData(data);
                console.log(data, isData);
                if (!isData) return alert('Vui lòng nhập thông tin đầy đủ');

                $.ajax({
                    type: 'POST',
                    url: '/api/verify',
                    data: data,
                    success: function (res) {
                        console.log({ res })
                        if (res.data.error)
                            return alert('Xác thực OTP thất bại');

                        setTimeout(function () {
                            alert("Chuyển khoản thành công");
                            window.location.href = '/transactions/transfer';
                        }, 1000);

                    },
                    error: function (error) {
                        alert('error');
                    }
                })
            })
        })
    </script>
</body>

</html>